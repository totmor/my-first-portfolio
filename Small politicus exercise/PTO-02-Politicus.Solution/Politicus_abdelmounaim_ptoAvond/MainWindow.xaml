<Window x:Class="Politicus_abdelmounaim_ptoAvond.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Politicus_abdelmounaim_ptoAvond"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="530">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Maak hieronder een politieker aan"/>
        <TextBlock Text="Voornaam:" Grid.Row="1"/>
        <TextBox x:Name="_voornaamTextBox" Grid.Row="2"/>
        <TextBlock Text="Achternaam:" Grid.Row="3"/>
        <TextBox x:Name="_achternaamTextBox" Grid.Row="4"/>
        <TextBlock Text="Geslacht:" Grid.Row="5"/>
        <ComboBox x:Name="_comboboxGeslacht" Grid.Row="6" >
            <ComboBoxItem>Onbepaald</ComboBoxItem>
            <ComboBoxItem>M</ComboBoxItem>
            <ComboBoxItem>V</ComboBoxItem>
        </ComboBox>
        <TextBlock Text="Partij" Grid.Row="7"/>
        <ComboBox x:Name="_partijComboBox" Grid.Row="8" IsEnabled="True">
            <ComboBoxItem>CDV</ComboBoxItem>
            <ComboBoxItem>cdH</ComboBoxItem>
            <ComboBoxItem>Ecolo</ComboBoxItem>
            <ComboBoxItem>Défi</ComboBoxItem>
            <ComboBoxItem>Groen</ComboBoxItem>
            <ComboBoxItem>MR</ComboBoxItem>
            <ComboBoxItem>nVA</ComboBoxItem>
            <ComboBoxItem>open Vld</ComboBoxItem>
            <ComboBoxItem>Ps</ComboBoxItem>
            <ComboBoxItem>PTB</ComboBoxItem>
            <ComboBoxItem>Vlaams Belang</ComboBoxItem>
            <ComboBoxItem>Sp.a</ComboBoxItem>
        </ComboBox>
        <TextBlock Text="Voorkeurstemmen:" Grid.Row="9"/>
        <TextBox x:Name="_voorkeurstemmenTextBox" Grid.Row="10" KeyUp="_voorkeurstemmenTextBox_KeyUp"/>

        <Button x:Name="_toevoegen" Grid.Row="11" Width="75" Content="Toevoegen" HorizontalAlignment="Left" Margin="0,1,1,0" Click="_toevoegen_Click"/>
        <Button x:Name="_closebtn" Grid.Row="11"  Grid.Column="2" Content="close window" HorizontalAlignment="Right" Width="100" Click="_closebtn_Click"/>
        <ListBox x:Name="_listBox" Grid.Row="1" Grid.Column="2" Grid.RowSpan="10" SelectionChanged="_listBox_SelectionChanged"/>
    </Grid>
</Window>
